---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import Section from "../../../components/Section.astro";
import {
  languages,
  getLocalizedPath,
  useTranslations,
} from "../../../i18n/utils";
import type { Language } from "../../../i18n/utils";

export async function getStaticPaths() {
  const paths = [];

  for (const locale of languages) {
    const blogEntries = await getCollection("blog", ({ id }) =>
      id.startsWith(`${locale}/`)
    );
    const localePaths = blogEntries.map((entry) => ({
      params: {
        locale,
        slug: entry.slug.replace(`${locale}/`, ""),
      },
      props: { entry, locale },
    }));
    paths.push(...localePaths);
  }

  return paths;
}

interface Props {
  entry: CollectionEntry<"blog">;
  locale: Language;
}

const { entry, locale } = Astro.props;
const { Content } = await entry.render();
const t = useTranslations(locale);

const formattedDate = entry.data.date.toLocaleDateString(
  locale === "de" ? "de-DE" : "en-US",
  {
    year: "numeric",
    month: "long",
    day: "numeric",
  }
);
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.description}
  image={entry.data.image}
  type="article"
  publishedTime={entry.data.date.toISOString()}
  author={entry.data.author}
  tags={entry.data.tags}
>
  <Header />

  <main class="pt-20">
    <!-- Article Header -->
    <Section bgColor="primary" className="pt-32 pb-16">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumbs -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center gap-2 text-sm text-secondary">
            <li>
              <a
                href={getLocalizedPath(locale, "/")}
                class="hover:text-blue-light transition-colors"
                >{t("pages.blogPost.home")}</a
              >
            </li>
            <li>
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </li>
            <li>
              <a
                href={getLocalizedPath(locale, "/blog")}
                class="hover:text-blue-light transition-colors"
                >{t("pages.blogPost.blog")}</a
              >
            </li>
            <li>
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </li>
            <li class="text-secondary font-medium" aria-current="page">
              {entry.data.title}
            </li>
          </ol>
        </nav>

        <!-- Article Meta -->
        <div class="mb-6">
          {
            entry.data.tags && entry.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {entry.data.tags.map((tag) => (
                  <span class="px-3 py-1 text-sm  bg-accent bg-opacity-20 text-primary-text rounded-full">
                    #{tag}
                  </span>
                ))}
              </div>
            )
          }

          <div class="flex flex-wrap items-center gap-4 text-secondary">
            <time datetime={entry.data.date.toISOString()}>
              {formattedDate}
            </time>
            {
              entry.data.author && (
                <>
                  <span>â€¢</span>
                  <span>
                    {t("pages.blogPost.by")} {entry.data.author}
                  </span>
                </>
              )
            }
          </div>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          {entry.data.title}
        </h1>

        {
          entry.data.description && (
            <p class="text-xl text-secondary leading-relaxed">
              {entry.data.description}
            </p>
          )
        }
      </div>
    </Section>

    <!-- Featured Image -->
    {
      entry.data.image && (
        <Section bgColor="secondary" className="py-0">
          <div class="max-w-5xl mx-auto -mt-16">
            <div class="aspect-video rounded-2xl overflow-hidden shadow-2xl">
              <img
                src={entry.data.image}
                alt={entry.data.title}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </Section>
      )
    }

    <!-- Article Content -->
    <Section bgColor="secondary" className={entry.data.image ? "pt-16" : ""}>
      <article class="max-w-3xl mx-auto">
        <div
          class="prose prose-lg prose-headings:text-primary prose-p:text-secondary prose-a:text-link-color hover:prose-a:text-link-hover prose-strong:text-primary prose-code:text-color-accent prose-code:bg-color-cream prose-code:px-1 prose-code:py-0.5 prose-code:rounded prose-pre:bg-gray-50 prose-pre:border prose-pre:border-border-color max-w-none"
        >
          <Content />
        </div>
      </article>
    </Section>

    <!-- Share & Navigation -->
    <Section bgColor="cream">
      <div class="max-w-3xl mx-auto">
        <!-- Share Buttons -->
        <div class="mb-12 text-center">
          <h3 class="text-lg font-semibold mb-4">
            {t("pages.blogPost.sharePost")}
          </h3>
          <div class="flex justify-center gap-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-secondary text-primary-text rounded-full hover:opacity-90 transition-opacity"
              aria-label="Share on Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
                ></path>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-primary text-primary-text rounded-full hover:opacity-90 transition-opacity"
              aria-label="Share on LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3 bg-accent text-white rounded-full hover:opacity-90 transition-opacity"
              aria-label="Share on Facebook"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Back to Blog -->
        <div class="text-center">
          <a
            href={getLocalizedPath(locale, "/blog")}
            class="inline-flex items-center gap-2 px-8 py-3 bg-blue-light text-white rounded-full font-medium hover:bg-color-primary shadow-md hover:shadow-lg transition-all duration-300"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"></path>
            </svg>
            {t("pages.blogPost.backToBlog")}
          </a>
        </div>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Additional prose styling for better markdown rendering */
  .prose {
    --tw-prose-body: var(--text-secondary);
    --tw-prose-headings: var(--text-primary);
    --tw-prose-links: var(--link-color);
    --tw-prose-bold: var(--text-primary);
    --tw-prose-counters: var(--text-secondary);
    --tw-prose-bullets: var(--text-secondary);
    --tw-prose-hr: var(--border-color);
    --tw-prose-quotes: var(--text-primary);
    --tw-prose-quote-borders: var(--border-color);
    --tw-prose-captions: var(--text-secondary);
  }

  .prose :global(img) {
    border-radius: 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .prose :global(blockquote) {
    border-left-color: #5759a6;
    font-style: italic;
  }

  .prose :global(h2),
  .prose :global(h3) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
</style>
