---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Section from "../../components/Section.astro";
import { languages, useTranslations } from "../../i18n/utils";
import type { Language } from "../../i18n/utils";

export async function getStaticPaths() {
  return languages.map((locale) => ({
    params: { locale },
  }));
}

const { locale } = Astro.params as { locale: Language };
const t = useTranslations(locale);
---

<BaseLayout
  title={t("pages.contact.title")}
  description={t("pages.contact.description")}
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <Section bgColor="primary" className="pt-32 pb-16">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          {t("pages.contact.heroTitle")}
        </h1>
        <p class="text-xl text-[var(--text-secondary)] max-w-2xl mx-auto">
          {t("pages.contact.heroSubtitle")}
        </p>
      </div>
    </Section>

    <!-- Contact Form Section -->
    <Section bgColor="secondary">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div>
            <h2 class="text-3xl font-bold mb-6">
              {t("pages.contact.sectionTitle")}
            </h2>
            <p class="text-lg text-[var(--text-secondary)] mb-8">
              {t("pages.contact.sectionText")}
            </p>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="bg-[#5759a6] text-white p-3 rounded-lg">
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">
                    {t("pages.contact.emailLabel")}
                  </h3>
                  <a
                    href="mailto:hello@gurls.club"
                    class="text-[var(--link-color)] hover:text-[var(--link-hover)] transition-colors"
                  >
                    hello@gurls.club
                  </a>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start gap-4">
                <div
                  class="bg-[var(--color-secondary)] text-white p-3 rounded-lg"
                >
                  <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">
                    {t("pages.contact.locationLabel")}
                  </h3>
                  <p class="text-[var(--text-secondary)]">
                    {t("pages.contact.locationText")}
                  </p>
                </div>
              </div>

              <!-- Social -->
              <div class="flex items-start gap-4">
                <div class="bg-[var(--color-accent)] text-white p-3 rounded-lg">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">
                    {t("pages.contact.followLabel")}
                  </h3>
                  <div class="flex gap-3">
                    <a
                      href="https://instagram.com"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-[var(--link-color)] hover:text-[var(--link-hover)] transition-colors"
                    >
                      Instagram
                    </a>
                    <span>•</span>
                    <a
                      href="https://discord.com"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-[var(--link-color)] hover:text-[var(--link-hover)] transition-colors"
                    >
                      Discord
                    </a>
                    <span>•</span>
                    <a
                      href="https://linkedin.com"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-[var(--link-color)] hover:text-[var(--link-hover)] transition-colors"
                    >
                      LinkedIn
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-white p-8 rounded-2xl shadow-xl">
            <form id="contact-form" class="space-y-6">
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium mb-2">
                  {t("pages.contact.nameLabel")}
                  <span class="text-[#5759a6]">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-all"
                  placeholder={t("pages.contact.namePlaceholder")}
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium mb-2">
                  {t("pages.contact.emailFieldLabel")}
                  <span class="text-[#5759a6]">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-all"
                  placeholder={t("pages.contact.emailPlaceholder")}
                />
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block text-sm font-medium mb-2">
                  {t("pages.contact.subjectLabel")}
                  <span class="text-[#5759a6]">*</span>
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-all"
                >
                  <option value="" disabled selected
                    >{t("pages.contact.subjectPlaceholder")}</option
                  >
                  <option value="join"
                    >{t("pages.contact.subjectOptions.join")}</option
                  >
                  <option value="volunteer"
                    >{t("pages.contact.subjectOptions.volunteer")}</option
                  >
                  <option value="sponsor"
                    >{t("pages.contact.subjectOptions.sponsor")}</option
                  >
                  <option value="collab"
                    >{t("pages.contact.subjectOptions.collab")}</option
                  >
                  <option value="feedback"
                    >{t("pages.contact.subjectOptions.feedback")}</option
                  >
                  <option value="other"
                    >{t("pages.contact.subjectOptions.other")}</option
                  >
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium mb-2">
                  {t("pages.contact.messageLabel")}
                  <span class="text-[#5759a6]">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-[var(--border-color)] bg-[var(--bg-secondary)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent transition-all resize-vertical"
                  placeholder={t("pages.contact.messagePlaceholder")}
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full px-8 py-4 bg-[var(--button-primary-bg)] text-[var(--button-primary-text)] rounded-lg font-medium hover:opacity-90 shadow-md hover:shadow-lg transition-all duration-300"
              >
                {t("pages.contact.sendButton")}
              </button>

              <!-- Form Message (success/error) -->
              <div id="form-message" class="hidden"></div>
            </form>
          </div>
        </div>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>

<script
  define:vars={{
    sendingButton: t("pages.contact.sendingButton"),
    successMessage: t("pages.contact.successMessage"),
    errorMessage: t("pages.contact.errorMessage"),
  }}
>
  const form = document.getElementById("contact-form");
  const formMessage = document.getElementById("form-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.textContent;

    // Disable button and show loading state
    submitButton.disabled = true;
    submitButton.textContent = sendingButton;

    try {
      // Get form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      // TODO: Replace with your actual form submission endpoint
      // In a real implementation, you would send this to your backend API
      // For now, we'll simulate a successful submission
      await new Promise((resolve) => setTimeout(resolve, 1000));

      // Success message
      formMessage.textContent = successMessage;
      formMessage.className =
        "p-4 rounded-lg text-center font-medium bg-green-100 text-green-800";
      formMessage.classList.remove("hidden");

      // Reset form
      form.reset();

      // Hide message after 5 seconds
      setTimeout(() => {
        formMessage.classList.add("hidden");
      }, 5000);
    } catch (error) {
      // Error message
      formMessage.textContent = errorMessage;
      formMessage.className =
        "p-4 rounded-lg text-center font-medium bg-red-100 text-red-800";
      formMessage.classList.remove("hidden");
    } finally {
      // Reset button
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  });
</script>
