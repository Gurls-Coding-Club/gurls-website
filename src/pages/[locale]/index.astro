---
import HomePage from '../../components/pages/HomePage.astro';
import { languages } from '../../i18n/utils';
import type { Language } from '../../i18n/utils';

export async function getStaticPaths() {
  // Only generate paths for non-default locales when prefixDefaultLocale is false
  return languages.filter(lang => lang !== 'en').map((locale) => ({
    params: { locale },
  }));
}

const { locale } = Astro.params as { locale: Language };
---

<HomePage locale={locale} />
