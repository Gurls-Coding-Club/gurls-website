---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../Header.astro";
import Footer from "../Footer.astro";
import Section from "../Section.astro";
import Link from "../Link.astro";
import { useTranslations } from "../../i18n/utils";
import type { Language } from "../../i18n/utils";
import { Icon } from "astro-icon/components";
import { siteConfig } from "../../config/site";

interface Props {
  locale: Language;
}

const { locale } = Astro.props;
const t = useTranslations(locale);

// Map social platform to icon name
const socialIcons = {
  instagram: "lucide:instagram",
  discord: "simple-icons:discord",
  linkedin: "lucide:linkedin",
} as const;
---

<BaseLayout
  title={t("pages.contact.title")}
  description={t("pages.contact.description")}
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <Section bgColor="primary" className="pt-32 pb-16">
      <div class="max-w-4xl mx-auto text-center text-secondary">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          {t("pages.contact.heroTitle")}
        </h1>
        <p class="text-xl max-w-2xl mx-auto">
          {t("pages.contact.heroSubtitle")}
        </p>
      </div>
    </Section>

    <!-- Contact Form Section -->
    <Section bgColor="secondary">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Info -->
          <div>
            <h2 class="text-3xl font-bold mb-6">
              {t("pages.contact.sectionTitle")}
            </h2>
            <p class="text-lg text-primary mb-8">
              {t("pages.contact.sectionText")}
            </p>

            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="bg-primary text-white p-3 rounded-lg">
                  <Icon name="lucide:mail" class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">
                    {t("pages.contact.emailLabel")}
                  </h3>
                  <a
                    href={`mailto:${siteConfig.contact.email}`}
                    class="text-primary hover:text-blue-light transition-colors"
                  >
                    {siteConfig.contact.email}
                  </a>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-start gap-4">
                <div class="bg-primary text-white p-3 rounded-lg">
                  <Icon name="lucide:map-pin" class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">
                    {t("pages.contact.locationLabel")}
                  </h3>
                  <p class="text-primary">
                    {t("pages.contact.locationText")}
                  </p>
                </div>
              </div>

              <!-- Social -->
              <div class="flex items-start gap-4">
                <div class="bg-primary text-white p-3 rounded-lg">
                  <Icon name="lucide:share-2" class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-1">
                    {t("pages.contact.followLabel")}
                  </h3>
                  <div class="flex gap-2">
                    {
                      Object.entries(siteConfig.social).map(
                        ([key, social], index, arr) => (
                          <>
                            <Link
                              href={social.url}
                              icon={
                                socialIcons[key as keyof typeof socialIcons]
                              }
                            >
                              {social.name}
                            </Link>
                            {index < arr.length - 1 && <span>â€¢</span>}
                          </>
                        )
                      )
                    }
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-secondary p-8 rounded-2xl shadow-primary shadow-2xl">
            <form id="contact-form" class="space-y-6">
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium mb-2">
                  {t("pages.contact.nameLabel")}
                  <span class="text-primary">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-primary bg-secondary text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                  placeholder={t("pages.contact.namePlaceholder")}
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium mb-2">
                  {t("pages.contact.emailFieldLabel")}
                  <span class="text-primary">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-primary bg-secondary text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                  placeholder={t("pages.contact.emailPlaceholder")}
                />
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block text-sm font-medium mb-2">
                  {t("pages.contact.subjectLabel")}
                  <span class="text-primary">*</span>
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-primary bg-secondary text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                >
                  <option value="" disabled selected
                    >{t("pages.contact.subjectPlaceholder")}</option
                  >
                  <option value="join"
                    >{t("pages.contact.subjectOptions.join")}</option
                  >
                  <option value="volunteer"
                    >{t("pages.contact.subjectOptions.volunteer")}</option
                  >
                  <option value="sponsor"
                    >{t("pages.contact.subjectOptions.sponsor")}</option
                  >
                  <option value="collab"
                    >{t("pages.contact.subjectOptions.collab")}</option
                  >
                  <option value="feedback"
                    >{t("pages.contact.subjectOptions.feedback")}</option
                  >
                  <option value="other"
                    >{t("pages.contact.subjectOptions.other")}</option
                  >
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium mb-2">
                  {t("pages.contact.messageLabel")}
                  <span class="text-primary">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-primary bg-secondary text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-vertical"
                  placeholder={t("pages.contact.messagePlaceholder")}
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full px-8 py-4 bg-primary text-secondary rounded-lg font-medium hover:opacity-90 shadow-md hover:shadow-lg transition-all duration-300"
              >
                {t("pages.contact.sendButton")}
              </button>

              <!-- Form Message (success/error) -->
              <div id="form-message" class="hidden"></div>
            </form>
          </div>
        </div>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>

<script
  define:vars={{
    sendingButton: t("pages.contact.sendingButton"),
    successMessage: t("pages.contact.successMessage"),
    errorMessage: t("pages.contact.errorMessage"),
  }}
>
  const form = document.getElementById("contact-form");
  const formMessage = document.getElementById("form-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const submitButton = form.querySelector('button[type="submit"]');
    const originalText = submitButton.textContent;

    // Disable button and show loading state
    submitButton.disabled = true;
    submitButton.textContent = sendingButton;

    try {
      // Get form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);

      // TODO: Replace with your actual form submission endpoint
      // In a real implementation, you would send this to your backend API
      // For now, we'll simulate a successful submission
      await new Promise((resolve) => setTimeout(resolve, 1000));

      // Success message
      formMessage.textContent = successMessage;
      formMessage.className =
        "p-4 rounded-lg text-center font-medium bg-green-100 text-green-800";
      formMessage.classList.remove("hidden");

      // Reset form
      form.reset();

      // Hide message after 5 seconds
      setTimeout(() => {
        formMessage.classList.add("hidden");
      }, 5000);
    } catch (error) {
      // Error message
      formMessage.textContent = errorMessage;
      formMessage.className =
        "p-4 rounded-lg text-center font-medium bg-red-100 text-red-800";
      formMessage.classList.remove("hidden");
    } finally {
      // Reset button
      submitButton.disabled = false;
      submitButton.textContent = originalText;
    }
  });
</script>
