---
/**
 * Imprint (Impressum) Page Component
 *
 * Austrian legal requirement (ยง 5 E-Commerce-Gesetz (ECG) and ยง 14 Unternehmensgesetzbuch (UGB))
 * Must include: Organization name, address, contact details, registration info, responsible person
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../Header.astro";
import Footer from "../Footer.astro";
import Section from "../Section.astro";
import { useTranslations } from "../../i18n/utils";
import type { Language } from "../../i18n/utils";
import { siteConfig } from "../../config/site";

interface Props {
  locale: Language;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<BaseLayout
  title={t("pages.imprint.title")}
  description={t("pages.imprint.description")}
  noindex={true}
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <Section bgColor="primary">
      <div class="container mx-auto px-4 py-16 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          {t("pages.imprint.heroTitle")}
        </h1>
        <p class="text-xl opacity-90">
          {t("pages.imprint.heroSubtitle")}
        </p>
      </div>
    </Section>

    <!-- Imprint Content -->
    <Section bgColor="secondary">
      <div class="container mx-auto px-4 py-16 max-w-4xl">
        <div class="prose prose-lg max-w-none">
          <!-- Organization Information -->
          <section class="mb-12">
            <h2 class="text-3xl font-bold mb-6">
              {t("pages.imprint.organizationTitle")}
            </h2>
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <p class="mb-2">
                <strong>{t("pages.imprint.name")}:</strong>
                {siteConfig.name}
              </p>
              <p class="mb-2">
                <strong>{t("pages.imprint.address")}:</strong><br />
                {siteConfig.contact.address.street}<br />
                {siteConfig.contact.address.postalCode}
                {siteConfig.contact.address.city}<br />
                {siteConfig.contact.address.country}
              </p>
            </div>
          </section>

          <!-- Contact Information -->
          <section class="mb-12">
            <h2 class="text-3xl font-bold mb-6">
              {t("pages.imprint.contactTitle")}
            </h2>
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <p class="mb-2">
                <strong>{t("pages.imprint.email")}:</strong>{" "}
                <a
                  href={`mailto:${siteConfig.contact.email}`}
                  class="text-primary hover:text-blue-light"
                >
                  {siteConfig.contact.email}
                </a>
              </p>
              <p class="mb-2">
                <strong>{t("pages.imprint.website")}:</strong>{" "}
                <a
                  href={siteConfig.url}
                  class="text-primary hover:text-blue-light"
                >
                  {siteConfig.url}
                </a>
              </p>
            </div>
          </section>

          <!-- Legal Information -->
          <section class="mb-12">
            <h2 class="text-3xl font-bold mb-6">
              {t("pages.imprint.legalTitle")}
            </h2>
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <p class="mb-4">
                <strong>{t("pages.imprint.legalForm")}:</strong>
                {t("pages.imprint.legalFormValue")}
              </p>
              <p class="mb-4">
                <strong>{t("pages.imprint.foundingYear")}:</strong>
                {siteConfig.organization.foundingYear}
              </p>
              <p class="mb-4">
                <strong>{t("pages.imprint.zvr")}:</strong>
                {siteConfig.legal.zvr}
              </p>
              <p class="mb-4">
                <strong>{t("pages.imprint.purpose")}:</strong>
                {t("pages.imprint.purposeValue")}
              </p>
            </div>
          </section>

          <!-- Legal Representatives -->
          <section class="mb-12">
            <h2 class="text-3xl font-bold mb-6">
              {t("pages.imprint.representatives")}
            </h2>
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <ul class="list-disc list-inside text-gray-700">
                {
                  siteConfig.legal.representatives.map((rep) => (
                    <li class="mb-1">{rep}</li>
                  ))
                }
              </ul>
            </div>
          </section>

          <!-- Responsible for Content -->
        </div>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
