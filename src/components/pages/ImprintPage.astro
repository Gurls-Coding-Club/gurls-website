---
/**
 * Imprint (Impressum) Page Component
 *
 * Austrian legal requirement (ยง 5 E-Commerce-Gesetz (ECG) and ยง 14 Unternehmensgesetzbuch (UGB))
 * Must include: Organization name, address, contact details, registration info, responsible person
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../Header.astro";
import Footer from "../Footer.astro";
import Section from "../Section.astro";
import { useTranslations } from "../../i18n/utils";
import type { Language } from "../../i18n/utils";
import { siteConfig } from "../../config/site";

interface Props {
  locale: Language;
}

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<BaseLayout
  title={t("pages.imprint.title")}
  description={t("pages.imprint.description")}
  noindex={true}
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <Section bgColor="primary">
      <div class="container mx-auto px-4 py-16 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          {t("pages.imprint.heroTitle")}
        </h1>
        <p class="text-xl opacity-90">
          {t("pages.imprint.heroSubtitle")}
        </p>
      </div>
    </Section>

    <!-- Imprint Content -->
    <Section bgColor="secondary">
      <div class="container mx-auto px-4 py-16 max-w-4xl">
        <div class="prose prose-lg max-w-none">
          <!-- Organization Name -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.organizationTitle")}
            </h2>
            <p>
              {t("pages.imprint.organizationName")}
            </p>
          </section>

          <!-- Registered Office -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.headquartersTitle")}
            </h2>
            <p>
              {siteConfig.contact.address.street}<br />
              {siteConfig.contact.address.postalCode}
              {siteConfig.contact.address.city}
            </p>
          </section>

          <!-- Contact -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.contactTitle")}
            </h2>
            <p>
              <strong>{t("pages.imprint.email")}:</strong>{" "}
              <a
                href={`mailto:${siteConfig.contact.email}`}
                class="text-primary hover:text-blue-light"
              >
                {siteConfig.contact.email}
              </a>
            </p>
          </section>

          <!-- Purpose -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.purposeTitle")}
            </h2>
            <p>
              {t("pages.imprint.purposeValue")}
            </p>
          </section>

          <!-- Authorized Representatives -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.representativesTitle")}
            </h2>

            <ul class="list-disc list-inside">
              {siteConfig.legal.representatives.map((rep) => <li>{rep}</li>)}
            </ul>
          </section>

          <!-- Responsible Supervisory Authority -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.supervisoryAuthorityTitle")}
            </h2>
            <p>
              {t("pages.imprint.supervisoryAuthorityValue")}
            </p>
          </section>

          <!-- Association Registration Number -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.registrationNumberTitle")}
            </h2>
            <p>
              <strong>ZVR:</strong>
              {siteConfig.legal.zvr}
            </p>
          </section>

          <!-- Association Authority -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.associationAuthorityTitle")}
            </h2>
            <p>
              {t("pages.imprint.associationAuthorityValue")}
            </p>
          </section>

          <!-- Disclaimer -->
          <section class="mb-8">
            <h2 class="text-2xl font-bold mb-4">
              {t("pages.imprint.disclaimerTitle")}
            </h2>
            <p>
              {t("pages.imprint.disclaimerText")}
            </p>
          </section>
        </div>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
