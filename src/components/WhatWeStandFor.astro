---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const pillars = [
  {
    key: 'growing',
    icon: `<svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`,
  },
  {
    key: 'uniting',
    icon: `<svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`,
  },
  {
    key: 'redefining',
    icon: `<svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
    </svg>`,
  },
  {
    key: 'learning',
    icon: `<svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>`,
  },
  {
    key: 'solving',
    icon: `<svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
    </svg>`,
  },
];
---

<section id="mission" class="py-20 bg-[var(--color-primary)] text-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
      {t('standFor.title')}
    </h2>
    <p class="text-center text-lg mb-12 opacity-90">
      {t('standFor.subtitle')}
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 max-w-7xl mx-auto">
      {pillars.map((pillar) => (
        <div class="bg-white text-[var(--text-primary)] rounded-3xl p-8 text-center hover:scale-105 transition-transform duration-300 shadow-lg">
          <div class="text-[var(--color-primary)]" set:html={pillar.icon} />
          <h3 class="text-xl font-bold mb-3">
            {t(`standFor.${pillar.key}.title`)}
          </h3>
          <p class="text-sm text-[var(--text-secondary)] leading-relaxed">
            {t(`standFor.${pillar.key}.description`)}
          </p>
        </div>
      ))}
    </div>

    <div class="flex justify-center gap-4 mt-12">
      <button class="px-6 py-2 border-2 border-white text-white rounded-full font-medium hover:bg-white hover:text-[var(--color-primary)] transition-colors">
        {t('standFor.ourMission')}
      </button>
      <button class="px-6 py-2 border-2 border-white text-white rounded-full font-medium hover:bg-white hover:text-[var(--color-primary)] transition-colors">
        {t('standFor.gurlsFaces')}
      </button>
    </div>
  </div>
</section>
