---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const pillars = [
  {
    key: "growing",
    icon: "lucide:trending-up",
  },
  {
    key: "uniting",
    icon: "lucide:users",
  },
  {
    key: "redefining",
    icon: "lucide:refresh-cw",
  },
  {
    key: "learning",
    icon: "lucide:lightbulb",
  },
  {
    key: "solving",
    icon: "lucide:code",
  },
];
---

<section id="mission" class="py-20 bg-primary text-primary-text">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
      {t("standFor.title")}
    </h2>
    <p class="text-center text-lg mb-12 opacity-90">
      {t("standFor.subtitle")}
    </p>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 max-w-7xl mx-auto"
    >
      {
        pillars.map((pillar) => (
          <div class="bg-white text-primary rounded-3xl p-8 text-center hover:scale-105 transition-transform duration-300 shadow-lg">
            <Icon name={pillar.icon} class="w-12 h-12 mx-auto mb-4" />
            <h3 class="text-xl font-bold mb-3">
              {t(`standFor.${pillar.key}.title`)}
            </h3>
            <p class="text-sm text-primary leading-relaxed">
              {t(`standFor.${pillar.key}.description`)}
            </p>
          </div>
        ))
      }
    </div>

    <div class="flex justify-center gap-4 mt-12">
      <button
        class="px-6 py-2 border-2 border-white text-white rounded-full font-medium hover:bg-white hover:text-primary transition-colors"
      >
        {t("standFor.ourMission")}
      </button>
      <button
        class="px-6 py-2 border-2 border-white text-white rounded-full font-medium hover:bg-white hover:text-primary transition-colors"
      >
        {t("standFor.gurlsFaces")}
      </button>
    </div>
  </div>
</section>
