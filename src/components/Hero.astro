---
import { Image } from "astro:assets";
import {
  getLangFromUrl,
  useTranslations,
  getLocalizedPath,
} from "../i18n/utils";
import Button from "./Button.astro";
import Link from "./Link.astro";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="relative h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src="/hero-image.jpg"
      alt="G:URL*s Coding Club team"
      class="w-full h-full object-cover"
      width={1920}
      height={1080}
      loading="eager"
      decoding="async"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/70">
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-8 leading-tight">
      {t("hero.title")} ðŸ’œ
    </h1>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <Button variant="secondary" size="lg">
        <a href="#about">
          {t("hero.learnMore")}
        </a>
      </Button>

      <Button variant="primary" size="lg">
        <a href={getLocalizedPath(lang, "/join")}>
          {t("hero.joinUs")}
        </a>
      </Button>
    </div>
  </div>

  <!-- Scroll indicator -->
  <Link
    href="#about"
    variant="secondary"
    className="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10"
    aria-label={t("hero.scrollDown")}
  >
    <Icon
      name="lucide:arrow-down"
      class="w-6 h-6 animate-bounce"
      aria-hidden="true"
    />
  </Link>
</section>
