---
import {
  getLangFromUrl,
  useTranslations,
  getLocalizedPath,
} from "../i18n/utils";
import Link from "./Link.astro";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-primary text-primary-text pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Contact Info -->
      <div>
        <h3 class="text-2xl font-bold mb-4">{t("footer.stayInTouch")}</h3>
        <div class="mb-4">
          <p class="whitespace-pre-line opacity-90">{t("footer.address")}</p>
        </div>
        <div class="flex gap-3 mt-6">
          <Link
            variant="secondary"
            href="https://instagram.com"
            className="w-5 h-5"
          >
            <Icon
              aria-label="Instagram"
              name="lucide:instagram"
              class="w-6 h-6"
            />
          </Link>
          <Link
            variant="secondary"
            href="https://discord.com"
            className="w-5 h-5"
          >
            <Icon
              aria-label="Discord"
              name="simple-icons:discord"
              class="w-6 h-6"
            />
          </Link>
          <Link
            variant="secondary"
            href="https://linkedin.com"
            className="w-5 h-5"
          >
            <Icon
              aria-label="LinkedIn"
              name="lucide:linkedin"
              class="w-6 h-6"
            />
          </Link>
        </div>
      </div>

      <!-- Get Involved -->
      <div>
        <h3 class="text-2xl font-bold mb-4">{t("footer.getInvolved")}</h3>
        <nav class="flex flex-col gap-2">
          <a
            href={getLocalizedPath(lang, "/join")}
            class="opacity-90 hover:opacity-100 hover:text-blue-light transition-colors"
          >
            {t("nav.joinUs")}
          </a>
          <a
            href={getLocalizedPath(lang, "/volunteer")}
            class="opacity-90 hover:opacity-100 hover:text-blue-light transition-colors"
          >
            {t("nav.volunteer")}
          </a>
          <a
            href={getLocalizedPath(lang, "/sponsor")}
            class="opacity-90 hover:opacity-100 hover:text-blue-light transition-colors"
          >
            {t("nav.sponsor")}
          </a>
          <a
            href={getLocalizedPath(lang, "/donate")}
            class="opacity-90 hover:opacity-100 hover:text-blue-light transition-colors"
          >
            {t("nav.donate")}
          </a>
        </nav>
      </div>

      <!-- Support -->
      <div>
        <h3 class="text-2xl font-bold mb-4">{t("footer.supportInitiative")}</h3>
        <ul class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-sm">
          <li class="mb-1">
            {t("footer.bankingInfo.accountHolder")}: G:URL*S Coding Club
          </li>
          <li class="mb-1 font-mono">IBAN: 0000 0000 0000 0000 0000</li>
          <li class="mb-1 font-mono">BIC: XXXXXX</li>
          <li class="mb-1">Bank: X Bank AG</li>
          <li class="mt-1">{t("footer.bankingInfo.reference")}</li>
        </ul>
      </div>
    </div>

    <!-- Sponsors -->
    <div class="border-t border-white/20 pt-8 mb-8">
      <h3 class="text-xl font-bold text-center mb-6">{t("footer.sponsors")}</h3>
      <div class="flex flex-wrap justify-center items-center gap-8">
        <!-- Placeholder for sponsor logos -->
        <div class="bg-white/10 backdrop-blur-sm rounded-lg px-8 py-4">
          <p class="text-sm opacity-75">Sponsor Logo 1</p>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg px-8 py-4">
          <p class="text-sm opacity-75">Sponsor Logo 2</p>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg px-8 py-4">
          <p class="text-sm opacity-75">Sponsor Logo 3</p>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/20 pt-6 text-center text-sm opacity-75">
      <p class="mb-3">
        {t("footer.photoCredits")}: {t("footer.photoCreditsName")}
      </p>
      <p class="mb-3">{t("footer.copyright")}</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={getLocalizedPath(lang, "/privacy")}
          class="hover:text-blue-light transition-colors"
        >
          {t("footer.privacyPolicy")}
        </a>
        <span>|</span>
        <a
          href={getLocalizedPath(lang, "/cookies")}
          class="hover:text-blue-light transition-colors"
        >
          {t("footer.cookiePolicy")}
        </a>
        <span>|</span>
        <a
          href={getLocalizedPath(lang, "/terms")}
          class="hover:text-blue-light transition-colors"
        >
          {t("footer.termsOfUse")}
        </a>
        <span>|</span>
        <a
          href={getLocalizedPath(lang, "/contact")}
          class="hover:text-blue-light transition-colors"
        >
          {t("nav.contact")}
        </a>
      </div>
    </div>
  </div>
</footer>
