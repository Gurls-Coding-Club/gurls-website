---
import { Image } from "astro:assets";
import {
  getLangFromUrl,
  useTranslations,
  getLocalizedPath,
} from "../i18n/utils";
import Button from "./Button.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="relative h-[60vh] flex items-center justify-center overflow-hidden"
>
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <Image
      src="/cta-background.jpg"
      alt="G:URL*s members wearing club shirts"
      class="w-full h-full object-cover"
      width={1920}
      height={720}
      loading="lazy"
      decoding="async"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-secondary/80 to-secondary/90"
    >
    </div>
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center text-secondary-text px-4 max-w-3xl mx-auto"
  >
    <h2 class="text-4xl md:text-5xl font-bold mb-4">
      {t("getInvolvedSection.title")}
    </h2>
    <p class="text-2xl md:text-3xl mb-8 font-light">
      {t("getInvolvedSection.subtitle")}
    </p>

    <Button variant="primary" size="lg" href={getLocalizedPath(lang, "/join")}>
      {t("getInvolvedSection.cta")}
    </Button>
  </div>
</section>
