---
import {
  getLangFromUrl,
  useTranslations,
  getLocalizedPath,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="events" class="py-20 bg-[var(--bg-secondary)]">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
      {t("upcomingEvents.title")}
    </h2>
    <p
      class="text-center text-lg mb-12 max-w-3xl mx-auto text-[var(--text-secondary)]"
    >
      {t("upcomingEvents.subtitle")}
    </p>

    <!-- Luma Calendar Embed -->
    <div class="text-center mt-16">
      <div class="flex justify-center">
        <iframe
          src="https://luma.com/embed/calendar/cal-4kTyt96myxtEqxH/events?lt=light"
          width="100%"
          height="450"
          frameborder="0"
          style="border: 1px solid #bfcbda88; border-radius: 4px; max-width: 600px;"
          allowfullscreen=""
          aria-hidden="false"
          tabindex="0"
          title="Event Calendar"></iframe>
      </div>
    </div>
  </div>
</section>
